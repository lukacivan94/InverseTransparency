<?xml version="1.0" encoding="UTF-8" ?>
<Module>
    <ModulePrefs
            title="Issues Overview plugin"
            directory_title="Issues Overview"
            description="A plugin that displays issues of a project"
            author="Ivan Lukac"
            author_email="Ivan.Lukac@Sky.de"
            height="350">
        <Optional feature="gadget-directory">
            <Param name="categories">
                JIRA
            </Param>
        </Optional>
        <Require feature="setprefs" />
        <Require feature="views" />
        <Require feature="dynamic-height" />
        <Require feature="oauthpopup" />
         
        #supportedLocales("${MODULE_KEY}")
  
    </ModulePrefs>
    <!-- bellow line added to fix the error -->
    <UserPref name="refresh" datatype="hidden" default_value="false" />
    <UserPref
            name="isConfigured"
            datatype="hidden"
            default_value="false" />
    <Content
            type="html"
            view="profile">
        <![CDATA[
            
  
        
        <!-- Required for the Atlassian gadget framework -->
            #requireResource("com.atlassian.gadgets.publisher:ajs-gadgets")
            #requireResource("com.atlassian.jira.gadgets:common")

            #includeResources()
  
        
        
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.5.0/main.min.css">
        <!-- link rel="stylesheet" href="pluginStyle.css" -->
            <!-- Bootstrap JS + Requirements -->
            <script src="http://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.5.0/main.min.js"></script>
            
            <!-- [ETHICAL_SSE] You can add other libraries here, the same way as Bootstrap is added above -->
            <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
            <!-- %       [ETHICAL_SSE] Enter your HTML below       % -->
            <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
            <div id="spacerbox" class="container-fluid" style="margin-top: 15px; height:600">
                <div class="row justify-content-center" style="margin-top: 15px">
                    <h4>Issues overview</h4>
                </div>
                <div class="row justify-content-center" style="margin-top: 15px">
                    <p id="viewSelector">calendar view | <a href="#" class="listView">list view</a> | <a href="#" class="projectView">project view</a></p>
                </div>
                <div id="selectUserDiv"class="row justify-content-center" style="margin-top: 15px">
                    <select id="selectUser" onchange="getIssuesOfUser()">
                        
                    </select>
                </div>
                <div id="selectProjectDiv"class="row justify-content-center" style="margin-top: 15px">
                    <select id="selectProject" onchange="getIssuesOfProject()">
                        <option>Select the Project</option>
                    </select>
                </div>
                <div id="hoverMessage" class="row justify-content-center" style="margin-top: 15px; height:500; background-color:#ffd6d6">
                    <div class="modal-header" style="margin-top: 15px; height:50">
                        <h5 class="modal-title">Inverse Transparency Notice</h5>
                    </div>
                    <div class="modal-body" style="margin-top: 15px; height:50">
                        <div class="form-group">
                            <h5 class="modal-title">The user made a rule not to disclose this data</h5>
                            <h5 class="modal-title">You can select another user from the dropdown</h5>
                        </div>
                    </div>
                    <div class="modal-footer" style="margin-top: 15px; height:50">
                        <label>This is a Inverse Transparency plugin feature</label>
                    </div>
                </div>
                <div id="listView">
                    <div class="row justify-content-center" style="margin-top: 15px">
                        <table id="userIssuesTable" style="overflow: auto">
                            <tr>
                                <th>
                                    <span class="glyphicon glyphicon-sort"></span>&nbsp&nbspISSUE                        
                                </th>
                                <th>
                                    <span class="glyphicon glyphicon-sort"></span>&nbsp&nbspDUE DATE   
                                </th>
                                <th>
                                    <span class="glyphicon glyphicon-sort"></span>&nbsp&nbspCATEGORY
                                </th>
                            </tr>
                        </table>
                    </div>
                </div>
                <div id="calendarView" height:400px>
                    <div id='calendar' style="margin-top: 15px"></div>
                </div>
                <div id="projectView">
                    <div class="row justify-content-center" style="margin-top: 15px">
                        <table id="projectUsersTable" style="overflow: auto">
                            <tr>
                                <th>
                                    <span class="glyphicon glyphicon-sort"></span>&nbsp&nbspUSER                       
                                </th>
                                <th>
                                    <span class="glyphicon glyphicon-sort"></span>&nbsp&nbspGREEN ISSUES  
                                </th>
                                <th>
                                    <span class="glyphicon glyphicon-sort"></span>&nbsp&nbspRED ISSUES
                                </th>
                                <th>
                                    <span class="glyphicon glyphicon-sort"></span>&nbsp&nbspSUCCESS RATE
                                </th>
                            </tr>
                        </table>
                    </div>
                </div>
                
            </div>
            <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
            <!-- %                End of your HTML                 % -->
            <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
            <!--
                We initialize the global Atlassian Gadget object. This is important!
                You may use it to initialize global variables as well (see "// Globals" below).
                If you want to learn more: https://developer.atlassian.com/server/framework/gadgets/creating-a-gadget-javascript-object/
            -->
            <script type="text/javascript">
                var gadget = AJS.Gadget({
                    baseUrl: "__ATLASSIAN_BASE_URL__",
                    useOauth: "/rest/gadget/1.0/currentUser",
                    view: {
                        onResizeAdjustHeight: true,
                        // Required!
                        template: function (args) { },
                        args: [{ }]
                    }
                });

                // Globals
                window.currentUser = "";

                // Show a loading indicator while we run our script below
                gadget.showLoading();
            </script>
            <!-- [ETHICAL_SSE] Your plugin logic is imported here -->
            <script src="__ATLASSIAN_BASE_URL__/download/resources/de.inversetransparenz.jira.dashboardPlugins/common.js"></script>
            <script src="__ATLASSIAN_BASE_URL__/download/resources/de.inversetransparenz.jira.dashboardPlugins/framework.js"></script>
            <script src="__ATLASSIAN_BASE_URL__/download/resources/de.inversetransparenz.jira.dashboardPlugins/issuesOverview.js"></script>
            <!-- Remove the loading indicator as soon as the script above has terminated. -->
            <script type="text/javascript">
                gadget.hideLoading();
            </script>
        ]]>
    </Content>
</Module>
